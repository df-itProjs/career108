---
import LinkCard from "../../../../components/LinkCard.astro";
import WhatAfter12ThLayout from "../../../../layouts/WhatAfter12thLayout.astro";

const title = "Engineering Degrees";
const description = "Engineering Degrees";

const allLinks = await Astro.glob("./*.md");
---

<WhatAfter12ThLayout title={title} description={description}>
  <main>
    <div class="container">
      <h1 class="page-title">{title}</h1>

      <div class="flex-w">
        {allLinks.map((link) => <LinkCard link={link.url} text={link.frontmatter.title} />)}
      </div>
    </div>
  </main>
</WhatAfter12ThLayout>
